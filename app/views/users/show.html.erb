<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.username %>
      </h1>
    </section>
  </aside>

  <div class="col-md-8">
    <% if @albums.any? %>
      <h3>Albums (<%= @albums.count %>)</h3>
      <ul class="albums">
        <%= render @albums %>
      </ul>
    <% end %>
  </div>
</div>
