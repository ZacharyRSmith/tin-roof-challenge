<div class="row">
  <aside class="col-md-4">
    <section class="album_info">
      <h1>
        <%= @album.title %>
      </h1>
    </section>
  </aside>

  <div class="col-md-8">
    <% if @photos.any? %>
      <h3>Photos (<%= @photos.count %>)</h3>
      <ul class="photos">
        <%= render @photos %>
      </ul>
    <% end %>
  </div>
</div>
